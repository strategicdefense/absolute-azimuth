---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

import { getCollection } from 'astro:content';
const services = await getCollection('services');


const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    title="Adversarial Services to Fortify Your Defenses"
    subtitle="From penetration testing to advanced threat simulations, our expert-led services are designed to protect your organization against the most sophisticated cyber threats. Whether you're securing networks, applications, or emerging technologies, we provide the strategic insight and hands-on expertise needed to safeguard your assets and ensure compliance with industry standards."
    actions={[{ variant: 'primary', text: 'Explore Services', href: '#services' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'AstroWind Hero Image',
    }}
  />


  <!-- Features2 Widget ************** -->

  <Features2
    id="services"
    title="Explore Our Services"
    subtitle="Can’t find the cybersecurity service you’re looking for? Let’s chat—we’re here to help you design a custom solution that perfectly meets your needs."
    columns={3}
    items={[
    {
  	title: 'Network Pen Testing',
  	description: "Think your network is secure? Let us find out. We dive deep to uncover hidden vulnerabilities before attackers do.",
  	icon: 'tabler:network',
        link: '/services/network',
    },
    {
        title: 'CMMC Consulting',
        description: "Feeling lost trying to navigate CMMC? We can help.",
        icon: 'tabler:shield-half',
        link: '/services/cmmc-consulting',
    },
    {
  	title: 'Application Security',
  	description: "Your apps are the gateway to your data. We ensure they’re fortified against any intrusion.",
  	icon: 'tabler:app-window',
        link: '/services/web-app',
    },
    {
  	title: 'Wireless Testing',
  	description: "Hidden SSIDs and WPA2 won’t stop us. We’ll ensure your wireless network isn’t an open door.",
  	icon: 'tabler:wifi',
        link: '/services/wireless',
    },
    {
  	title: 'Ransomware Drills',
  	description: "Simulate the nightmare scenario. Our drills test your resilience against ransomware attacks.",
  	icon: 'tabler:virus-off',
        link: '/services/ransomware',
    },
    {
  	title: 'Laptop Security',
  	description: "Think full-disk encryption is enough? We go beyond, testing every inch of your mobile defenses.",
  	icon: 'tabler:device-laptop',
        link: '/services/laptop',
    },
    {
  	title: 'Cloud Security',
  	description: "Your data is in the cloud. We make sure it stays secure, whether on AWS, Azure, or Google Cloud.",
  	icon: 'tabler:cloud-lock',
        link: '/services/cloud',
    },
    {
  	title: 'AI/LLM Testing',
  	description: "Emerging tech needs emerging security. We test AI and LLMs to ensure they’re as secure as they are smart.",
  	icon: 'tabler:robot',
        link: '/services/ai-llm',
    },
    {
  	title: 'Phishing & Social Engineering',
  	description: "Your people are your first line of defense. We test their readiness against the most cunning attacks.",
  	icon: 'tabler:user-check',
        link: '/services/phishing',
    },
    {
  	title: 'Hardware Testing',
  	description: "From IoT to vehicle systems, we ensure your hardware is locked down tight.",
  	icon: 'tabler:device-desktop-analytics',
        link: '/services/hardware',
    },
    {
  	title: 'API Security',
  	description: "APIs are the backbone of your services. We test them thoroughly to prevent data breaches.",
  	icon: 'tabler:api',
        link: '/services/web-api',
    },
    {
  	title: 'Physical Security',
  	description: "Security isn’t just digital. We assess the physical security of your premises to prevent breaches from all angles.",
  	icon: 'tabler:square-key',
        link: '/services/physical',
    },
    {
  	title: 'Security Consulting',
  	description: "Need a strategic partner? Our consulting services help you build a resilient security posture from the ground up.",
  	icon: 'tabler:shield-check',
        link: '/services/cyber-consulting',
    },
    ]}

>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Contact Us',
        href: '/contact',
      },
    ]}
    title="Secure Your Future"
    subtitle="Contact us now to start building a stronger, more resilient security posture."
  />
</Layout>
